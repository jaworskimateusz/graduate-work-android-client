<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/task_item"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="80dp"
    android:background="@color/task_back"
    >

    <TextView
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tw_title"
        android:layout_weight="1"
        android:textSize="24sp"
        android:textColor="@color/primary_darker"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="95dp"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageView
        android:id="@+id/iw_solved"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_task_solved"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@+id/tw_date"
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/primary_darker"
        app:layout_constraintTop_toBottomOf="@+id/tw_title"
        android:layout_marginTop="2dp"
        android:layout_marginStart="95dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/ib_task_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_task_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
