<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/task_item"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:background="@color/task_back"
    >

    <TextView
        android:text="Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:id="@+id/tw_title"
        android:textSize="21sp"
        android:textColor="@color/primary_darker"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="90dp"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageView
        android:id="@+id/iw_solved"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_task_solved"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@+id/tw_date"
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/primary_darker"
        app:layout_constraintTop_toBottomOf="@+id/tw_title"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="90dp"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
