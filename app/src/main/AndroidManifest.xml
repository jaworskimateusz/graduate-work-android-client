<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.jaworskimateusz.machineservice">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MachineServiceApplication"
        android:allowBackup="true"
        android:configChanges="locale"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppTheme.Dark"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.ReportProblemActivity"
            android:label="@string/title_activity_report_problem"
            android:theme="@style/AppTheme.Dark.NoActionBar" />
        <activity
            android:name=".activity.TasksActivity"
            android:label="@string/tasks"
            android:theme="@style/AppTheme.Dark.NoActionBar"/>
        <activity
            android:name=".activity.TaskDetailActivity"
            android:label="@string/task_detail"
            android:theme="@style/AppTheme.Dark.NoActionBar"/>
        <activity
            android:name=".activity.MachinesActivity"
            android:label="@string/machines"
            android:theme="@style/AppTheme.Dark.NoActionBar"/>

        <activity
            android:name=".activity.MachineDetailActivity"
            android:label="@string/machine_detail"
            android:theme="@style/AppTheme.Dark.NoActionBar"/>

        <activity
            android:name=".activity.IssuesActivity"
            android:label="@string/issues"
            android:theme="@style/AppTheme.Dark.NoActionBar"/>

        <activity
            android:name=".activity.IssueDetailActivity"
            android:label="@string/issue_detail"
            android:theme="@style/AppTheme.Dark.NoActionBar"/>

        <activity
            android:name=".activity.MachineServiceDetailActivity"
            android:label="@string/machine_service"
            android:theme="@style/AppTheme.Dark.NoActionBar"/>

        <activity
            android:name=".activity.QrScannerActivity"
            android:theme="@style/AppTheme.Dark"/>

        <activity
            android:name=".activity.PdfViewActivity"
            android:theme="@style/AppTheme.Dark"/>

        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".activity.base.BaseActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>